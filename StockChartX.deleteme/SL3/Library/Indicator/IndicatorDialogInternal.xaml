<UserControl x:Class="ModulusFE.IndicatorDialogInternal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Height="Auto" Width="Auto"  >
  <UserControl.Resources>
    <Style x:Key="LabelStyle" TargetType="TextBlock">
      <Setter Property="FontFamily" Value="Tahoma" />
      <Setter Property="Margin" Value="2,0,0,0"/>
    </Style>
    <Style TargetType="ComboBox">
      <Setter Property="Margin" Value="1" />
      <Setter Property="Foreground" Value="Black" />
    </Style>
    <Style TargetType="TextBox">
      <Setter Property="Margin" Value="1" />
      <Setter Property="Foreground" Value="Black" />
    </Style>
  </UserControl.Resources>
  <Grid Background="{Binding DialogBackground}">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="100"/>
      <ColumnDefinition Width="125"/>
    </Grid.ColumnDefinitions>

    <TextBlock Name="lbl0" Text="Label0"  Style="{StaticResource LabelStyle}" Grid.Row="1" Grid.Column="0" 
               Foreground="{Binding LabelForeground}" FontSize="{Binding LabelFontSize}" TextWrapping="Wrap"/>
    <TextBox Name="txt0" Text="text0" Grid.Row="1" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>
    <ComboBox Name="cmb0" Grid.Row="1" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>

    <TextBlock Name="lbl1" Text="Label0"  Style="{StaticResource LabelStyle}" Grid.Row="2" Grid.Column="0"
               Foreground="{Binding LabelForeground}" FontSize="{Binding LabelFontSize}" TextWrapping="Wrap"/>
    <TextBox Name="txt1" Text="text0" Grid.Row="2" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>
    <ComboBox Name="cmb1" Grid.Row="2" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>

    <TextBlock Name="lbl2" Text="Label0"  Style="{StaticResource LabelStyle}" Grid.Row="3" Grid.Column="0"
               Foreground="{Binding LabelForeground}" FontSize="{Binding LabelFontSize}"/>
    <TextBox Name="txt2" Text="text0" Grid.Row="3" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>
    <ComboBox Name="cmb2" Grid.Row="3" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>

    <TextBlock Name="lbl3" Text="Label0"  Style="{StaticResource LabelStyle}" Grid.Row="4" Grid.Column="0"
               Foreground="{Binding LabelForeground}" FontSize="{Binding LabelFontSize}"/>
    <TextBox Name="txt3" Text="text0" Grid.Row="4" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>
    <ComboBox Name="cmb3" Grid.Row="4" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>

    <TextBlock Name="lbl4" Text="Label0"  Style="{StaticResource LabelStyle}" Grid.Row="5" Grid.Column="0"
               Foreground="{Binding LabelForeground}" FontSize="{Binding LabelFontSize}"/>
    <TextBox Name="txt4" Text="text0" Grid.Row="5" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>
    <ComboBox Name="cmb4" Grid.Row="5" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>

    <TextBlock Name="lbl5" Text="Label0"  Style="{StaticResource LabelStyle}" Grid.Row="6" Grid.Column="0"
               Foreground="{Binding LabelForeground}" FontSize="{Binding LabelFontSize}"/>
    <TextBox Name="txt5" Text="text0" Grid.Row="6" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>
    <ComboBox Name="cmb5" Grid.Row="6" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>

    <TextBlock Name="lbl6" Text="Label0"  Style="{StaticResource LabelStyle}" Grid.Row="7" Grid.Column="0"
               Foreground="{Binding LabelForeground}" FontSize="{Binding LabelFontSize}"/>
    <TextBox Name="txt6" Text="text0" Grid.Row="7" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>
    <ComboBox Name="cmb6" Grid.Row="7" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>

    <TextBlock Name="lbl7" Text="Label0"  Style="{StaticResource LabelStyle}" Grid.Row="8" Grid.Column="0"
               Foreground="{Binding LabelForeground}" FontSize="{Binding LabelFontSize}"/>
    <TextBox Name="txt7" Text="text0" Grid.Row="8" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>
    <ComboBox Name="cmb7" Grid.Row="8" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>

    <TextBlock Name="lbl8" Text="Label0"  Style="{StaticResource LabelStyle}" Grid.Row="9" Grid.Column="0"
               Foreground="{Binding LabelForeground}" FontSize="{Binding LabelFontSize}"/>
    <TextBox Name="txt8" Text="text0" Grid.Row="9" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>
    <ComboBox Name="cmb8" Grid.Row="9" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>

    <TextBlock Name="lbl9" Text="Label0"  Style="{StaticResource LabelStyle}" Grid.Row="10" Grid.Column="0"
               Foreground="{Binding LabelForeground}" FontSize="{Binding LabelFontSize}"/>
    <TextBox Name="txt9" Text="text0" Grid.Row="10" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>
    <ComboBox Name="cmb9" Grid.Row="10" Grid.Column="1" FontSize="{Binding LabelFontSize}"/>

    <TextBlock Text="Color" Style="{StaticResource LabelStyle}" Grid.Row="11" Grid.Column="0"
               Foreground="{Binding LabelForeground}" FontSize="{Binding LabelFontSize}"/>
    <Canvas Name="canvasColor" Background="Red" Width="115" Height="8" Grid.Row="11" Grid.Column="1" Margin="5" 
              MouseLeftButtonDown="canvasColor_MouseLeftButtonDown"/>

    <Border Grid.Row="12" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="Black" CornerRadius="2" Margin="2">
      <TextBlock Style="{StaticResource LabelStyle}" TextWrapping="Wrap" Margin="1" 
               x:Name="lblDesc" 
                 Foreground="{Binding LabelForeground}" FontSize="{Binding LabelFontSize}"/>
    </Border>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="13" Grid.ColumnSpan="2">
      <Button Content="OK" Name="btnOK" Margin="2" Width="60" Click="btnOK_Click" />
      <Button Content="Cancel" Name="btnCancel" Margin="2" Width="60" Click="btnCancel_Click" />
    </StackPanel>
  </Grid>
</UserControl>
