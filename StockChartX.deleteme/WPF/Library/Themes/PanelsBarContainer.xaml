<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ModulusFE">

  <Style TargetType="{x:Type local:PanelsBarContainer}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:PanelsBarContainer}">
          <Border HorizontalAlignment="Stretch" Margin="0,0,0,0" x:Name="shine" Width="Auto" CornerRadius="0,0,0,0">
            <Border.Background>
              <LinearGradientBrush EndPoint="0.486,0.986" StartPoint="0.486,0">
                <GradientStop Color="Gray" Offset="0"/>
                <GradientStop Color="Black" Offset="1"/>
              </LinearGradientBrush>
            </Border.Background>
            <StackPanel Name="rootPanel" Orientation="Horizontal">
              
            </StackPanel>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>
  