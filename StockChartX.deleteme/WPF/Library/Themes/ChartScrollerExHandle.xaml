<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mfeControls="clr-namespace:ModulusFE.Controls"                    >
    <Style TargetType="{x:Type mfeControls:ChartScrollerExHandle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type mfeControls:ChartScrollerExHandle}">
                    <Canvas Width="15" Height="25">
                        <Border CornerRadius="8" BorderThickness="1" Background="{TemplateBinding Background}" Width="14" Height="25"/>
                        <Line x:Name="leftLine" X1="5" Y1="7" X2="5" Y2="18" Stroke="{TemplateBinding Stroke}" StrokeThickness="1"/>
                        <Line x:Name="middleLine" X1="7" Y1="5" X2="7" Y2="20" Stroke="{TemplateBinding Stroke}" StrokeThickness="1"/>
                        <Line x:Name="rightLine" X1="9" Y1="7" X2="9" Y2="18" Stroke="{TemplateBinding Stroke}" StrokeThickness="1"/>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>